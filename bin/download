#!/bin/sh
set -e

# Datestamp from input
if [ -z "$FMS" ]; then
  echo You must activate the FMS environment first.
elif [ "$#" = 1 ]; then
  datestamp=$(date -d "$1" +%y%m%d)
else
  echo "USAGE: $0 [datestamp]"
  exit 1
fi

file=$(date -d "$1" +"$FMS/archive/%Y%m%d.txt")

# Skip stuff.
# http://archive.opm.gov/operating_status_schedules/fedhol/
echo '
Federal holidays 2005
20050117
20050221
20050530
20050704
20051010
20051111
20051124
20051226

Federal holidays 2006
20060102
20060116
20060220
20060529
20060704
20060904
20061009
20061110
20061123
20061225

Federal holidays 2007
20070101
20070115
20070219
20070528
20070704
20070903
20071008
20071112
20071122
20071125

Federal holidays 2008
20080101
20080121
20080218
20080526
20080704
20080901
20081013
20081111
20081127
20081225

Federal holidays 2009
20090101
20090119
20090216
20090525
20090703
20090907
20091012
20091111
20091126
20091225

Federal holidays 2010
20100101
20100118
20100215
20100531
20100705
20100906
20101011
20101111
20101125
20101224

Federal holidays 2011
20101231
20110117
20110221
20110530
20110704
20110905
20111010
20111111
20111124
20111226

Federal holidays 2012
20120102
20120116
20120220
20120528
20120704
20120903
20121008
20121112
20121122
20121225

Federal holidays 2013
20130101
20130121

Other weird pages
20120606
20081001
' | grep $(basename "$file" .txt) > /dev/null && exit

# Skip things that are done.
test -e "$file" && exit

# Download, finally.
get() {
  sleep 0.5s
  wget -w 8 -O "$file" "https://www.fms.treas.gov/fmsweb/viewDTSFiles?dir=$1&fname=$2.txt"
}

# Try the archive and the live directory. Also try different datestamps.
get a "${datestamp}00" && exit
get w "${datestamp}00" && exit
get a "${datestamp}01" && exit
get w "${datestamp}01" && exit
get a "${datestamp}02" && exit
get w "${datestamp}02" && exit

# Clean up because it didn't work.
echo -n Something went wrong for\ 
date -d "$1"
rm "$file"
exit 1
