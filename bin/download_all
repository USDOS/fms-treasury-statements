#!/bin/sh

oneday=$((24 * 60 * 60))

# Start four days ago
day=$(($(date -d $(date --rfc-3339 date) +%s) - (4 * $oneday)))

# Download
while
  a=$(date -d@$day +%a)
  test $a = 'Sat' || test $a = 'Sun' || download @$day
do
  day=$(($day - $oneday))
done

# Parse
for txt in $(ls archive/*.txt); do
    echo parse $txt
done
